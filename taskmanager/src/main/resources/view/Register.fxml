<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane styleClass="root-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.controller.RegisterController">

    <VBox alignment="CENTER" maxWidth="500" spacing="25" styleClass="glass-panel">
        <padding>
            <Insets bottom="40" left="50" right="50" top="40" />
        </padding>

        <VBox alignment="CENTER" spacing="5">
            <Label styleClass="title-large" text="Create Account">
                <font>
                    <Font name="System Bold" size="28" />
                </font>
            </Label>
            <Label styleClass="subtitle" text="Join Task Management System" />
        </VBox>

        <VBox spacing="15" VBox.vgrow="ALWAYS">
            <VBox spacing="5">
                <Label styleClass="form-label" text="Username" />
                <TextField fx:id="usernameField" promptText="Choose a username" styleClass="glass-input" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Email Address" />
                <TextField fx:id="emailField" promptText="Enter your email" styleClass="glass-input" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="glass-input" />
            </VBox>

            <VBox spacing="5">
                <Label styleClass="form-label" text="Confirm Password" />
                <PasswordField fx:id="confirmPasswordField" promptText="Repeat your password" styleClass="glass-input" />
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" />

            <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" prefHeight="45" styleClass="btn-glass-primary" text="Create Account">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>

            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="text-muted" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" styleClass="hyperlink-glass" text="Login here" />
            </HBox>
        </VBox>
    </VBox>
</StackPane>