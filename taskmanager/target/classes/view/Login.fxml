<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.taskmanager.controller.LoginController"
           styleClass="root-background">

    <VBox alignment="CENTER" spacing="25" maxWidth="450" styleClass="glass-panel">
        <padding>
            <Insets top="50" right="50" bottom="50" left="50"/>
        </padding>

        <!-- Logo/Title -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="Task Management" styleClass="title-large">
                <font>
                    <Font name="System Bold" size="32"/>
                </font>
            </Label>
            <Label text="Glassmorphism Edition" styleClass="subtitle">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>

        <!-- Login Form -->
        <VBox spacing="20" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label text="Username" styleClass="form-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="glass-input"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password" styleClass="form-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="glass-input"/>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                    styleClass="btn-glass-primary" prefHeight="45" maxWidth="Infinity">
                <font>
                    <Font name="System Bold" size="14"/>
                </font>
            </Button>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" styleClass="text-muted"/>
                <Hyperlink fx:id="registerLink" text="Register here" onAction="#handleRegister"
                           styleClass="hyperlink-glass"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>