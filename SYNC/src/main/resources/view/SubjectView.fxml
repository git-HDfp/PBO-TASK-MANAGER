<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="25" styleClass="editor-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.controller.SubjectViewController">

    <padding>
        <Insets bottom="35" left="35" right="35" top="35" />
    </padding>
   <children>
    <!-- Modern Header with Icon -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label styleClass="editor-icon" text="ðŸ“š">
            <font>
                <Font size="32" />
            </font>
        </Label>
        <VBox spacing="5">
            <Label styleClass="editor-title" text="Manage Subjects">
                <font>
                    <Font name="System Bold" size="26" />
                </font>
            </Label>
            <Label styleClass="editor-subtitle" text="Add, edit, or remove subjects for your tasks">
                <font>
                    <Font size="14" />
                </font>
            </Label>
        </VBox>
    </HBox>

    <VBox spacing="18" VBox.vgrow="ALWAYS">
        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="form-icon" text="ðŸ“š" />
                <Label styleClass="form-label-dark" text="Subject Name" />
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextField fx:id="subjectField" prefHeight="40" promptText="Enter subject name..." styleClass="glass-input-light" HBox.hgrow="ALWAYS" />
                <Button fx:id="btnAdd" mnemonicParsing="false" onAction="#handleAdd" prefHeight="40" styleClass="btn-glass-primary" text="Add" />
            </HBox>
        </VBox>

        <VBox spacing="8">
            <HBox alignment="CENTER_LEFT" spacing="8">
                <Label styleClass="form-icon" text="ðŸ“‹" />
                <Label styleClass="form-label-dark" text="Subjects List" />
            </HBox>
            <ListView fx:id="subjectListView" prefHeight="200.0" prefWidth="200.0" styleClass="subject-list-view" VBox.vgrow="ALWAYS" />
        </VBox>
    </VBox>

    <HBox alignment="CENTER_RIGHT" spacing="15">
        <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEdit" prefHeight="40" prefWidth="140" styleClass="btn-glass-primary" text="Edit Selected" />
        <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#handleDelete" prefHeight="40" prefWidth="140" styleClass="btn-glass-secondary" text="Delete Selected" />
        <Button fx:id="btnClose" mnemonicParsing="false" onAction="#handleClose" prefHeight="40" prefWidth="100" styleClass="btn-glass-gray" text="Close" />
    </HBox>
   </children>
</VBox>
