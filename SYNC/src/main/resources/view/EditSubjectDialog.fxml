<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="editor-container" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.controller.EditSubjectDialogController">
    
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>
    
    <!-- Modern Header with Icon -->
    <HBox alignment="CENTER_LEFT" spacing="15">
        <Label styleClass="editor-icon" text="âœï¸">
            <font>
                <Font size="28" />
            </font>
        </Label>
        <VBox spacing="3">
            <Label styleClass="editor-title" text="Edit Subject">
                <font>
                    <Font name="System Bold" size="22" />
                </font>
            </Label>
            <Label styleClass="editor-subtitle" text="Update the subject name">
                <font>
                    <Font size="13" />
                </font>
            </Label>
        </VBox>
    </HBox>
    
    <!-- Input Field -->
    <VBox spacing="10">
        <HBox alignment="CENTER_LEFT" spacing="8">
            <Label styleClass="form-icon" text="ðŸ“š" />
            <Label styleClass="form-label-dark" text="Subject Name" />
        </HBox>
        <TextField fx:id="subjectNameField" prefHeight="45" promptText="Enter new subject name..." styleClass="glass-input-light" />
    </VBox>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER_RIGHT" spacing="12" VBox.vgrow="NEVER">
        <Button fx:id="btnCancel" mnemonicParsing="false" onAction="#handleCancel" prefHeight="42" prefWidth="110" styleClass="btn-glass-gray" text="Cancel" />
        <Button fx:id="btnSave" mnemonicParsing="false" onAction="#handleSave" prefHeight="42" prefWidth="110" styleClass="btn-glass-primary" text="Save" />
    </HBox>
    
</VBox>
