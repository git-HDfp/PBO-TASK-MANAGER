<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane styleClass="root-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.taskmanager.controller.RegisterController">

    <VBox alignment="CENTER" maxWidth="480" spacing="32" styleClass="auth-panel">
        <padding>
            <Insets bottom="48" left="48" right="48" top="48" />
        </padding>

        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="8">
            <Label styleClass="register-icon" text="âœ¨" style="-fx-font-size: 48px;"/>
            <Label styleClass="auth-title" text="Create Account">
                <font>
                    <Font name="Google Sans" size="32" />
                </font>
            </Label>
            <Label styleClass="auth-subtitle" text="Start managing your tasks efficiently" />
        </VBox>

        <!-- Registration Form -->
        <VBox spacing="18" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label styleClass="auth-label" text="Username" />
                <TextField fx:id="usernameField" promptText="Choose a username" 
                          styleClass="auth-input" prefHeight="48"/>
            </VBox>

            <VBox spacing="8">
                <Label styleClass="auth-label" text="Email Address" />
                <TextField fx:id="emailField" promptText="Enter your email" 
                          styleClass="auth-input" prefHeight="48"/>
            </VBox>

            <VBox spacing="8">
                <Label styleClass="auth-label" text="Password" />
                <PasswordField fx:id="passwordField" promptText="Create a strong password" 
                              styleClass="auth-input" prefHeight="48"/>
            </VBox>

            <VBox spacing="8">
                <Label styleClass="auth-label" text="Confirm Password" />
                <PasswordField fx:id="confirmPasswordField" promptText="Repeat your password" 
                              styleClass="auth-input" prefHeight="48"/>
            </VBox>

            <Label fx:id="errorLabel" styleClass="error-label" wrapText="true" />

            <VBox spacing="16">
                <Button fx:id="registerButton" maxWidth="Infinity" onAction="#handleRegister" 
                        prefHeight="52" styleClass="auth-btn-primary" text="Create Account">
                    <font>
                        <Font name="Google Sans Medium" size="15" />
                    </font>
                </Button>

                <HBox alignment="CENTER" spacing="6">
                    <Label styleClass="auth-muted" text="Already have an account?" />
                    <Hyperlink fx:id="loginLink" onAction="#handleBackToLogin" 
                              styleClass="auth-link" text="Sign in" />
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</StackPane>