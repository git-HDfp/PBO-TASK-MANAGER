<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.taskmanager.controller.LoginController"
           styleClass="root-background">

    <VBox alignment="CENTER" spacing="32" maxWidth="420" styleClass="auth-panel">
        <padding>
            <Insets top="48" right="48" bottom="48" left="48"/>
        </padding>

        <!-- Logo/Title Section -->
        <VBox alignment="CENTER" spacing="8">
            <Label text="ðŸŽ¯" style="-fx-font-size: 48px;"/>
            <Label text="SYNC" styleClass="auth-title">
                <font>
                    <Font name="Google Sans" size="32"/>
                </font>
            </Label>
            <Label text="Study Your Next Coursework" styleClass="auth-subtitle">
                <font>
                    <Font size="14"/>
                </font>
            </Label>
        </VBox>

        <!-- Login Form -->
        <VBox spacing="20" VBox.vgrow="ALWAYS">
            <VBox spacing="8">
                <Label text="Username" styleClass="auth-label"/>
                <TextField fx:id="usernameField" promptText="Enter your username" 
                          styleClass="auth-input" prefHeight="48"/>
            </VBox>

            <VBox spacing="8">
                <Label text="Password" styleClass="auth-label"/>
                <PasswordField fx:id="passwordField" promptText="Enter your password" 
                              styleClass="auth-input" prefHeight="48"/>
                <!-- Error Label moved here -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
            </VBox>

            <VBox spacing="16">
                <Button fx:id="loginButton" text="Sign In" onAction="#handleLogin"
                        styleClass="auth-btn-primary" prefHeight="52" maxWidth="Infinity">
                    <font>
                        <Font name="Google Sans Medium" size="15"/>
                    </font>
                </Button>

                <HBox alignment="CENTER" spacing="6">
                    <Label text="Don't have an account?" styleClass="auth-muted"/>
                    <Hyperlink fx:id="registerLink" text="Sign up" onAction="#handleRegister"
                              styleClass="auth-link"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
</StackPane>